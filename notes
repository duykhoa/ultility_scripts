NOTE_PATH="/home/kevin/Workspace/Personal/Notes"
remote="origin"
branch="master"

command=$1

if [ -z $command ]
then
  $EDITOR $NOTE_PATH
elif [ $command == "sync" ]
then
  SYNC_MSG=$2

  if [ -z $SYNC_MSG ]
  then
    datetime=$(date +"%Y-%m-%d %T")
    SYNC_MSG="Sync notes at $datetime"
    echo $SYNC_MSG

    bash -l -c "cd $NOTE_PATH && git add . && git commit -m '$SYNC_MSG' && git push -u $origin $branch"
  fi
fi
